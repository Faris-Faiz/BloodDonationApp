<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/recyclerView_image_bloodType"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="5dp"
            android:src="@drawable/blood_full_abminus"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recyclerView_textView_bloodBankNameDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/recyclerView_textView_bloodBankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Should be the name"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recyclerView_textView_bloodBankDateDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/recyclerView_textView_bloodBankDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Should be the date"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recyclerView_textView_bloodBankTimeDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time:"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/recyclerView_textView_bloodBankTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Should be the time"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
</androidx.cardview.widget.CardView>